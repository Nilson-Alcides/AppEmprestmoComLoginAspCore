@model AppLayoutAspCore.Models.Cliente

@{
    ViewData["Title"] = "Cadastro cliente";
}

<h1>Cadastro de cliente</h1>


<form asp-action="Cadastrar" asp-controller="Home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                  
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe um nome completo ">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control Nascimento" placeholder="00/00/0000">
                                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    <span asp-validation-for="Sexo" class="text-danger"></span>
                                </div>
                                <div class="form-group">                                    
                                    <label asp-for="CPF">CPF</label>
                                    @if (ViewData["MSG_CPF"] != null)
                                    {
                                        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_CPF"])</p>
                                    }
                                    <input type="text" asp-for="CPF" class="form-control CPF" placeholder="000.000.000-00">

                                    <span asp-validation-for="CPF" class="text-danger"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control Telefone" placeholder="(00) 0000-0000">
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    @if (ViewData["MSG_Email"] != null)
                                    {
                                        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_Email"])</p>
                                    }
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu e-mail">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <input class="form-control" asp-for="Senha" type="password" placeholder="********">
                                    <span asp-validation-for="Senha"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>

                            </article>
                            <div class="border-top card-body text-center">Já tem um conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>